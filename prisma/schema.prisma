// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  role     String  @default("user")
  code     Int?    @unique
  password String?

  TourBooking TourBooking[]
  Employee    Employee?
  Payment     Payment[]
}

model Employee {
  id         String  @id @default(uuid())
  firstName  String
  lastName   String
  middleName String?
  mobile     String  @unique
  email      String  @unique

  user User @relation(fields: [userId], references: [id])

  userId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model TourBooking {
  id             String  @id @default(uuid())
  fullName       String
  email          String
  phone          String
  country        String
  departureDate  String
  safariDuration String?
  adults         Int

  kids             Int?     @default(0)
  Infants          Int?     @default(0)
  paymentStatus    Int?     @default(0)
  updator          User?    @relation(fields: [userId], references: [id])
  userId           String?  @default("0784852d-72d8-4cb7-9352-a9a60fd0a19a")
  specialInterests String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())
  status           String?  @default("pending")

  fee     Decimal?  @default(0)
  Payment Payment[]
}

model Payment {
  id String @id @default(uuid())

  amount        Decimal      @default(0)
  paymentDate   DateTime     @default(now())
  reciepient    User         @relation(fields: [userId], references: [id])
  pendingAmout  Decimal?     @default(0)
  booking       TourBooking? @relation(fields: [tourBookingId], references: [id])
  tourBookingId String?
  userId        String
  mode          String?      @default("cash")
}
